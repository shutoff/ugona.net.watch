<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/smart_watch_2_control_width"
    android:layout_height="@dimen/smart_watch_2_control_height"
    android:padding="6px"
    tools:ignore="ContentDescription,PxUsage">

    <ImageView
        android:id="@+id/car"
        android:layout_width="124px"
        android:layout_height="164px" />

    <LinearLayout
        android:id="@+id/data"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/voltage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/smart_watch_2_text_size_medium" />

        <TextView
            android:id="@+id/balance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/smart_watch_2_text_size_medium" />

        <TextView
            android:id="@+id/temperature"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textColor="@android:color/white"
            android:textSize="@dimen/smart_watch_2_text_size_medium" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_gravity="bottom|right"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <ProgressBar
                android:id="@+id/upd"
                android:layout_width="20px"
                android:layout_height="20px"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/refresh"
                android:layout_width="20px"
                android:layout_height="20px"
                android:src="@drawable/update" />

            <TextView
                android:id="@+id/time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5px"
                android:textColor="@android:color/white"
                android:textSize="@dimen/smart_watch_2_text_size_medium" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>